<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<record id="shopinvader_product_tree_view" model="ir.ui.view">
    <field name="model">shopinvader.product</field>
    <field name="inherit_id" ref="shopinvader.shopinvader_product_tree_view"/>
    <field name="arch" type="xml">
        <field name="lang_id" position="after">
            <field name="display_value_ids" widget="many2many_tags"/>
        </field>
    </field>
</record>

<record id="shopinvader_product_form_view" model="ir.ui.view">
    <field name="model">shopinvader.product</field>
    <field name="inherit_id" ref="shopinvader.shopinvader_product_form_view"/>
    <field name="arch" type="xml">
        <field name="lang_id" position="after">
            <field
                name="display_value_ids"
                widget="many2many_tags"
                domain="[
                    ('id', 'in', available_attribute_value_ids[0][2]),
                    ('attribute_id.use_for_display', '=', True)
                    ]"
                attrs="{'invisible': [('available_attribute_value_ids', '=', False)]}"/>
            <field
                name="available_attribute_value_ids"
                widget="many2many_tags"/>
        </field>
    </field>
</record>

</odoo>
